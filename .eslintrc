{
	"parser": "babel-eslint",
	"extends": [
		"standard",
		"standard-react",
		"plugin:prettier/recommended",
		"prettier/standard",
		"prettier/react"
	],
	"env": {
		"node": true,
		"jest": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"ecmaFeatures": {
			"legacyDecorators": true,
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"version": "16"
		}
	},
	"rules": {
		"space-before-function-paren": 0,
		"react/prop-types": 0,
		"react/jsx-handler-names": 0,
		"react/jsx-fragments": 0,
		"react/no-unused-prop-types": 0,
		"import/export": 0,
		"indent": ["error", "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
		"no-tabs": 0,
		"semi": [2, "always"]
	}
}
